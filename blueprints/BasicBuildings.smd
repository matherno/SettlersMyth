<blueprint name="Camp" type="Building" description="Starting camp for any budding settlement" buildable="true">
    <icon imagefile="icons/camp.png"/>
    <grid x="4" y="4" height="1.5" posincentre="false">
        <resourcestack x="2" y="1"/>
        <resourcestack x="0" y="2"/>
        <resourcestack x="1" y="0"/>
        <resourcestack x="3" y="1"/>
        <resourcestack x="1" y="2"/>
        <entry x="2" y="3"/>
    </grid>
    <component type="BuildingConstructor" id="1" construction_pack="BuildMaterials1" construction_time="5000"/>    
    <component type="BuildingVoxelRenderable" id="2" staticmodel="true">
        <model voxelfile="buildings/Camp.mgv"/>
    </component>
    <component type="ResourceStacks" id="3"/>    
    <component type="InitResources" id="4">
        <resource name="BuildMaterials1" amount="18"/>
    </component>
    <component type="BuildingResidents" id="5" unit="Settler" max_units="15"/>
    <component type="UnitRecruiter" id="6" unit="Settler" max_units="5"/>

    <component type="ParticleSystem" id="7" size="0.07" velocity="0.4" gravity="0.00015" time_alive="1000" time_between_spawns="80">
    	<emitter x="3.5" y="0.2" z="-2.5"/>
    	<emitter x="0.5" y="0.2" z="-0.5"/>
    	<colour r="50" g="0" b="0"/>
    	<spawnpos mode="circle" radius="0.25">
    		<normal x="0" y="1" z="0"/>
    	</spawnpos>
    	<spawndir mode="hemisphere" exp="200">
    		<direction x="0" y="1" z="0"/>
    	</spawndir>    
    	<trigger mode="constructed"/>
    </component>

    <component type="ParticleSystem" id="8" size="0.07" velocity="0.4" gravity="0.00001" time_alive="4000" time_between_spawns="300">
    	<emitter x="3.5" y="0" z="-2.5"/>
    	<emitter x="0.5" y="0" z="-0.5"/>
    	<colour r="40" g="40" b="40"/>
    	<spawnpos mode="circle" radius="0.2">
    		<normal x="0" y="1" z="0"/>
    	</spawnpos>
    	<spawndir mode="hemisphere" exp="200">
    		<direction x="0" y="1" z="0"/>
    	</spawndir>    
    	<trigger mode="constructed"/>
    </component>

</blueprint>

<blueprint name="Wood Cutter" type="Building" description="Cuts down trees for logs" buildable="true">
    <icon imagefile="icons/woodcutter.png"/>
    <grid x="4" y="4" height="2.3" posincentre="false">
        <resourcestack x="3" y="2"/>
        <clearpos x="2" y="3"/>
        <clearpos x="2" y="2"/>
        <clearpos x="3" y="3"/>
        <entry x="2" y="1"/>
    </grid>
    <construction construction_pack="BuildMaterials1" amount="4"/>
    <component type="BuildingVoxelRenderable" id="1" staticmodel="true">
        <model voxelfile="buildings/Woodcutter.mgv"/>
    </component>
    <component type="BuildingHarvester" id="2" deposit="Tree" harvest_time="5000"/>
    <component type="ResourceStacks" id="3"/>    
    <component type="UnitRecruiter" id="4" max_units="3" unit="Settler"/>
</blueprint>


<blueprint name="Sawmill" type="Building" description="Gathers logs and saws them into planks" buildable="true">
    <icon imagefile="icons/sawmill.png"/>
    <grid x="4" y="4" height="2.4" posincentre="false">
        <resourcestack x="3" y="3"/>
        <resourcestack x="2" y="3"/>
        <clearpos x="1" y="3"/>
        <clearpos x="1" y="2"/>
        <entry x="1" y="1"/>
    </grid>
    <construction construction_pack="BuildMaterials1" amount="5"/>
    <component type="BuildingManufacturer" id="1" process_time="5000">
        <manufacturespot x="2" y="2"/> 
        <manufacturedir x="1" y="0"/> 
        <input name="Log" amount="1"/> 
        <output name="Plank" amount="1"/> 
    </component>
    <component type="BuildingVoxelRenderable" id="2" staticmodel="true">
        <model voxelfile="buildings/Sawmill.mgv"/>
    </component>
    <component type="ResourceStacks" id="3"/>    
    <component type="UnitRecruiter" id="4" max_units="3" unit="Settler"/>
</blueprint>

